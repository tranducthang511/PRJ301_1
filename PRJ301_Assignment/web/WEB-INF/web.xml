<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminLoginFilter</filter-name>
        <filter-class>filter.AdminLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminLoginFilter</filter-name>
        <servlet-name>AdminLoginServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>controller.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinClassServlet</servlet-name>
        <servlet-class>controller.JoinClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListClassServlet</servlet-name>
        <servlet-class>controller.ListClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListRequestOpenClassServlet</servlet-name>
        <servlet-class>controller.ListRequestOpenClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveServlet</servlet-name>
        <servlet-class>controller.ApproveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassDetailsServlet</servlet-name>
        <servlet-class>controller.ClassDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeclineServlet</servlet-name>
        <servlet-class>controller.DeclineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>controller.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditClassServlet</servlet-name>
        <servlet-class>controller.EditClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinClassServlet</servlet-name>
        <url-pattern>/joinclass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListClassServlet</servlet-name>
        <url-pattern>/listclass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRequestOpenClassServlet</servlet-name>
        <url-pattern>/listrequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveServlet</servlet-name>
        <url-pattern>/approve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassDetailsServlet</servlet-name>
        <url-pattern>/classdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeclineServlet</servlet-name>
        <url-pattern>/decline</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditClassServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
